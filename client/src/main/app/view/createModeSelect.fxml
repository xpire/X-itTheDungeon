            <Button fx:id="beginNewDraftBtn" layoutX="45.0" layoutY="192.0" mnemonicParsing="false" onAction="#onBeginNewDraftBtnPressed" text="Lets Go!" visible="false"/>
         </children>
      </AnchorPane>
   </right>
</BorderPane>
